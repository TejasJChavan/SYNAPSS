{
    "name": "psyapp",
    "version": "1.0.0",
    "main": "main.js",
    "scripts": {
        "start": "electron .",
        "dev": "vite",
        "build": "vite build",
        "build:electron": "vite build && electron-builder",
        "dist": "npm run build && electron-builder --publish=never",
        "postinstall": "electron-builder install-app-deps"
    },
    "dependencies": {
        "chart.js": "^4.4.0",
        "lowdb": "^7.0.1",
        "lucide-react": "^0.552.0",
        "react": "^18.3.1",
        "react-chartjs-2": "^5.2.0",
        "react-dom": "^18.3.1",
        "react-router-dom": "^7.9.5"
    },
    "devDependencies": {
        "@vitejs/plugin-react": "^4.0.0",
        "autoprefixer": "^10.4.16",
        "electron": "^30.0.0",
        "electron-builder": "^24.13.3",
        "postcss": "^8.4.31",
        "tailwindcss": "^3.3.5",
        "vite": "^5.0.0"
    },
    "build": {
        "appId": "com.psyapp.application",
        "productName": "Psychology Assessment App",
        "directories": {
            "output": "release"
        },
        "files": [
            "dist/**/*",
            "main.js",
            "preload.js",
            "package.json",
            "src/services/**/*"
        ],
        "win": {
            "target": [
                {
                    "target": "nsis",
                    "arch": [
                        "x64"
                    ]
                },
                {
                    "target": "portable",
                    "arch": [
                        "x64"
                    ]
                }
            ],
            "icon": "build/icon.ico"
        },
        "nsis": {
            "oneClick": false,
            "allowToChangeInstallationDirectory": true,
            "createDesktopShortcut": true,
            "createStartMenuShortcut": true,
            "runAfterFinish": true
        },
        "portable": {
            "artifactName": "${productName}-${version}-portable.exe"
        }
    }
}
